            <li Class="StockGenerator_Animals">
                <tradeTagsSell>
                    <li>ATR_MechanicalAnimal</li>
                </tradeTagsSell>
                <tradeTagsBuy>
                    <li>ATR_MechanicalAnimal</li>
                </tradeTagsBuy>
                <kindCountRange>
                    <min>1</min>
                    <max>2</max>
                </kindCountRange>
                <countRange>
                    <min>1</min>
                    <max>5</max>
                </countRange>
            </li>
        </value>
	</Operation>

	<!-- Add mechanical animals to the Android Union caravans. -->
