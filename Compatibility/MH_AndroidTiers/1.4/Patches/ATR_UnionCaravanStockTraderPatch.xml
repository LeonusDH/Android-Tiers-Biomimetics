                </tradeTagsBuy>
                <kindCountRange>
                    <min>1</min>
                    <max>4</max>
                </kindCountRange>
                <countRange>
                    <min>1</min>
                    <max>5</max>
                </countRange>
            </li>
        </value>
	</Operation>

</Patch>